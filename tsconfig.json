{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build/",
      "target": "es6",
      "allowJs": true,
      "lib": ["es2015", "es2015.symbol", "es2015.symbol.wellknown", "es6", "es7", "dom"],
      "typeRoots": ["node_modules/@types"],
      "types": ["node"],
      "allowUnreachableCode": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
